<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:focusableInTouchMode="false">
    <ImageView android:id="@+id/icono2"
        android:layout_width="?android:attr/listPreferredItemHeight"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:src="@drawable/foto"
        android:padding="2dip"/>
    <TextView android:id="@+id/precio2"
        android:layout_width="?android:attr/listPreferredItemHeight"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:textColor="#000000"
        android:layout_alignParentRight="true"
        android:text="@+id/TextView2"
        android:singleLine="true"/>
    <TextView android:id="@+id/titulo2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/icono2"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_toLeftOf="@id/precio2"
        android:text="@+id/TextView1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:singleLine="true" />
    <TextView android:id="@+id/descripcion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@+id/TextView3"
        android:textSize="10sp"
        android:layout_toRightOf="@id/icono2"
        android:layout_toLeftOf="@id/precio2"
        android:layout_below="@id/titulo2"
        android:textAppearance="?android:attr/textAppearanceLarge" />


</RelativeLayout>
