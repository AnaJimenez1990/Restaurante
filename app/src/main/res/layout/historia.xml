<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    android:background="#66CC33">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView android:id="@+id/tituloHistoria"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="25sp"
            android:gravity="center"
            android:text="Historia"
            android:singleLine="true"
            android:paddingTop="10dip"
            android:layout_alignParentTop="true" />
        <ImageView
            android:id="@+id/imagenTeja"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/teja_rio"
            android:layout_below="@id/tituloHistoria"
            />


        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/imagenTeja"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            >
            <TextView
                android:id="@+id/historia"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:textSize="15sp"
                android:textColor="#FFFFFF"

                android:text="@string/hist" />
        </ScrollView>
    </RelativeLayout>
</FrameLayout>
